<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/card_styles"
        app:cardCornerRadius="11dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/jobProfileCard"
            android:padding="15dp">

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummyCompanyName"
                android:textColor="@color/black_shade_1"
                android:layout_marginBottom="5dp"
                android:textSize="19sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_below="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="location_icon"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/job_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/dummyCompanyLocation"
                    android:textColor="@color/black_shade_1"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="25sp"
                android:id="@+id/editCompanyIcon"
                android:layout_alignParentEnd="true"
                android:layout_height="25sp"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:contentDescription="location_icon"
                android:src="@drawable/edit_icon" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>