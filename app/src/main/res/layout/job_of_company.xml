<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/card_styles"
        app:cardCornerRadius="11dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/jobProfileCard"
            android:padding="15dp">

            <TextView
                android:id="@+id/jobName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummyCompanyName"
                android:textColor="@color/black_shade_1"
                android:layout_marginBottom="5dp"
                android:textSize="19sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/jobReviewContainer"
                android:layout_below="@+id/jobName"
                app:cardBackgroundColor="@color/themeLightBlue"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="6dp"
                        android:contentDescription="review_icon"
                        android:src="@drawable/review_icon" />

                    <TextView
                        android:id="@+id/jobReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:color="@color/white"
                        android:text="0 Reviews"
                        android:textColor="@color/themeSkyBlue"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jobSalaryContainer"
                android:layout_below="@+id/jobName"
                android:layout_toRightOf="@+id/jobReviewContainer"
                app:cardBackgroundColor="@color/themeSkyBlue"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginRight="6dp"
                        android:contentDescription="salary_icon"
                        android:src="@drawable/salary_icon" />

                    <TextView
                        android:id="@+id/jobSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:color="@color/white"
                        android:text="20,000"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="25sp"
                android:id="@+id/editJobIcon"
                android:layout_alignParentEnd="true"
                android:layout_height="25sp"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:contentDescription="location_icon"
                android:src="@drawable/edit_icon" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>