<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.homeActivity.CompanyFragment">

    <!--Header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/companiesHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:text="@string/companiesHeading"
            android:textColor="@color/themeBlackColor"
            android:textSize="23sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/addCompanyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/companiesHeading"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="@color/themeSkyBlue"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="3.5dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/job_package"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:color="@color/white"
                android:gravity="center"
                android:padding="3dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_below="@+id/companiesHeading"
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/companyPageInfo"
            android:textColor="@color/black_shade_1"
            android:textSize="16sp" />

    </RelativeLayout>
    <!--End of Header-->

    <include layout="@layout/screen_loader" />

    <include layout="@layout/company" />
    <include layout="@layout/company" />
    <include layout="@layout/company" />

</LinearLayout>