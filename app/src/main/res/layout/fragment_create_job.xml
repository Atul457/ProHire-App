<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jobDetailsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:text="@string/createJob"
            android:textColor="@color/themeBlackColor"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companiesHeading"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30dp"
            android:text="@string/createJobInfo"
            android:textColor="@color/black_shade_1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/jobName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_border_gray"
            android:hint="Enter name of job"
            android:inputType="text"
            android:textColor="@color/themeBlackColor"
            android:textColorHighlight="@color/themeBlackColor"
            android:textColorHint="@color/themeGrayColor" />


        <TextView
            android:id="@+id/jobNameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text=""
            android:textColor="@color/themeRedColor"
            android:textSize="12dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/jobSalary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_border_gray"
            android:hint="Enter job salary per month"
            android:inputType="text"
            android:textColor="@color/themeBlackColor"
            android:textColorHighlight="@color/themeBlackColor"
            android:textColorHint="@color/themeGrayColor" />


        <TextView
            android:id="@+id/jobSalaryInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text=""
            android:textColor="@color/themeRedColor"
            android:textSize="12dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/jobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_border_gray"
            android:gravity="center|start"
            android:hint="Enter description of job"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:paddingBottom="7dp"
            android:textColor="@color/themeBlackColor"
            android:textColorHighlight="@color/themeBlackColor"
            android:textColorHint="@color/themeGrayColor" />

        <TextView
            android:id="@+id/jobDescriptionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text=""
            android:textColor="@color/themeRedColor"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--Inputs-->

    <Button
        android:id="@+id/createJobButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/themeSkyBlue"
        android:text="Create"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="20dp" />

    <!--Inputs-->

</RelativeLayout>